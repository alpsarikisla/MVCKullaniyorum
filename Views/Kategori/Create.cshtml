@model MVCKullaniyorum.Models.Categories
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="form">
    @using (Html.BeginForm())
    {
        if (ViewBag.sonuc != null)
        {
            if (ViewBag.sonuc == "Basarili")
            {
                <div class="alertBasarili">
                   <strong>Başarılı!</strong> Kategori Başarıyla Eklenmiştir.
                </div>
            }
            else
            {
                <div class="alertBasarisiz">
                    Ekleme İşlemi Başarısız
                </div>
            }
        }
        <div class="row">
            @Html.DisplayNameFor(model => model.CategoryName)<br />
            @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "forminput" } })
        </div>
        <div class="row">
            @Html.DisplayNameFor(model => model.Description)<br />
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "forminput" } })

        </div>
        <div class="row" style="margin-top:10px;">
            <button type="submit" class="gonderbutton">Kategori Ekle</button>
            <a href="@Url.Action("Index","Kategori")">Kategori Listesine Dön</a>
        </div>
    }
</div>

